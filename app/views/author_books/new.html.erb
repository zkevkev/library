<form action="/parents/:parent_id/child_table_name" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p><b>Enter a new book:</b></p>
  <input type='text' id='name' name='name' value='name'/><br/>
  <input type='number' id='publish_date' name='publish_date'/>
  <label for='publish_date'> publish date</label><br/>
  <input type='radio' id='new' name='new_or_old' value='true'>
  <label for='new'> book is newly printed</label><br/>
  <input type='radio' id='old' name='new_or_old' value='false'>
  <label for='old'> book is used</label><br/>
  <button type='submit' name='commit' value='Create Child'>Create Child</>
</form>