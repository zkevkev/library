<nav>
  <%= link_to "Books", "/child_table_name" %>
</nav>

<h1>Authors</h1>

<%= form_with url: "/parents", method: :get, local: true, data: {turbo_method: :read} do |form| %>
  <%= form.label "Search by Name" %>
  <%= form.text_field :search_by_name %>
  <%= form.submit "Search" %>
<% end %>

<%= link_to "Sort by Number of Books", :sort_by => "books_counter" %>

<%= link_to "New Author", "/parents/new" %></br></br>

<% @authors.each do |author| %>
    <%= link_to "#{author.name}", "/parents/#{author.id}" %> created: <%= author.created_at %></br>
    <%= link_to "Update #{author.name}", "/parents/#{author.id}/edit" %>
  
    <%= button_to "Delete #{author.name}", "/parents/#{author.id}", method: :delete %></br>
<% end %>