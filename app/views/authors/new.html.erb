<form action="/parents" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new author:</p>
  <input type='text' name='name'/><br/>
  <input type='number' name='copies sold' min="1"/><br/>
  <input type='checkbox' id='dead' name='dead' value='true'>
  <label for='dead'> author is dead</label><br/>
  <input type='checkbox' id='alive' name='alive' value='false'>
  <label for='alive'> author is alive</label><br/>
  <input type='submit' name='create parent'/>
  <label for='create parent'> Create Parent</label>
</form>