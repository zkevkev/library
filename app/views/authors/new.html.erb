<form action="/parents" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p><b>Enter a new author:</b></p>
  <input type='text' id='name' value='name'/><br/>
  <input type='number' id='copies sold' min='1'/>
  <label for='copies sold'> copies sold</label><br/>
  <input type='checkbox' id='dead' name='dead' value='true'>
  <label for='dead'> author is dead</label><br/>
  <input type='checkbox' id='alive' name='alive' value='false'>
  <label for='alive'> author is alive</label><br/>
  <button type='submit' name='create parent' value='Create Parent'>Create Parent</>
</form>